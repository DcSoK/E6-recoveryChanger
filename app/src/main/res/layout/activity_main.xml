<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="rootStatus: "
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Credits: @luckmax "
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recovery Stock"
        android:layout_marginTop="20dp"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonOnClickStock" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recovery TWRP"
        android:layout_marginTop="20dp"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonOnClickTWRP" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recovery PhillZ"
        android:layout_marginTop="20dp"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonOnClickPhillz" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="If you want check if the recovery is installed well"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reboot Into Recovery"
        android:layout_marginTop="5dp"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:background="@color/md_red_400"
        android:onClick="buttonOnClickReboot" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Original code from: @dcsok \nthx TWRP team and @Kra1o5"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
